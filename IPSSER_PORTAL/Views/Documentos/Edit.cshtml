@model IPSSER.DATOS.TBL_PORTAL_DOCUMENTO

@{
    ViewBag.Title = "Create";
}

<h2>EDIT</h2>

@{ Html.EnableClientValidation(); }
@using (Html.BeginForm("Edit", "Documentos", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <input type="hidden" name="Id" value="@Model.IdDocumento" />
    <div class="form-horizontal">
        <h4>TBL_PORTAL_DOCUMENTO</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Titulo *</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
