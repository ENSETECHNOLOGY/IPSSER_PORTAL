                                </div>
                                <div class="tp-caption text15 white sfb"
                                     data-x="0"
                                     data-hoffset="0"
                                     data-voffset="-10"
                                     data-y="168"
                                     data-speed="800"
                                     data-start="2200"
                                     data-easing="Power4.easeOut"
                                     data-endspeed="300"
                                     data-endeasing="Power1.easeIn"
                                     data-captionhidden="off"
                                     style="z-index: 6">@FrontSlide.Titulo</div>
                                    @{int start = 2500, y = 220;}
                                    @for (var i = 1; i <= 3; i++)
                                    {
                                        <div class="tp-caption slide_list3 sfb"
                                             data-x="0"
                                             data-hoffset="0"
                                             data-voffset="-10"
                                             data-y="@y"
                                             data-speed="800"
                                             data-start="@start"
                                             data-easing="Power4.easeOut"
                                             data-endspeed="300"
                                             data-endeasing="Power1.easeIn"
                                             data-captionhidden="off"
                                             style="z-index: 6">
                                            <i class="fa fa-check"></i>
                                            @if (i == 1)
                                            {
                                                @FrontSlide.Contenido1;
                                            }
                                            @if (i == 2)
                                            {
                                                @FrontSlide.Contenido2;
                                            }
                                            @if (i == 3)
                                            {
                                                @FrontSlide.Contenido3;
                                            }
                                            @{start = start + 300; }
                                            @{ y = y + 30;}
                                        </div>
                                    }
                                </li>
                        }
                </ul>
                <div class="tp-bannertimer"></div>
            </div>
        </div>
