@model IEnumerable<IPSSER.DATOS.TBL_PORTAL_CONTENIDOSLIDE>

@{
    ViewBag.Title = "Index";
}

<br />
<center>
    <h2>CONTENIDO PANEL</h2>
</center>
<br />
<br />

<p>
    @Html.ActionLink("Crear nuevo contenido", "Create", null, new { @class = "btn btn-primary btn-xs" })
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contenido_Uno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contenido_Dos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contenido_Tres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TBL_PORTAL_SLIDE.Titulo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contenido_Uno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contenido_Dos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contenido_Tres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TBL_PORTAL_SLIDE.Titulo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdContenidoSlide }, new { @class = "btn btn-primary btn-xs" }) |
                    @Html.ActionLink("Ver Detalles", "Details", new { id = item.IdContenidoSlide }, new { @class = "btn btn-primary btn-xs" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdContenidoSlide }, new { @class = "btn btn-primary btn-xs" })
                </td>
            </tr>
        }

    </table>
</div>
