@model IEnumerable<IPSSER.DATOS.TBL_PORTAL_SLIDE>

@{
    ViewBag.Title = "Index";
}

<br />
<center>
    <h2>DEFINICION PANEL</h2>
</center>
<br />
<br />

<p>
    @Html.ActionLink("Crear Nuevo Panel", "Create", null, new { @class = "btn btn-primary btn-xs" })
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
            <tr>
                <th>
                    Título Panel
                </th>
                <th>
                    Descripción Panel
                </th>
                <th>
                    Nombre Front
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TBL_PORTAL_FRONT.Titulo)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdSlide }, new { @class = "btn btn-primary btn-xs" }) |
                        @Html.ActionLink("Ver Detalles", "Details", new { id = item.IdSlide }, new { @class = "btn btn-success btn-xs" }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdSlide }, new { @class = "btn btn-danger btn-xs" })
                    </td>
                </tr>
            }

    </table>
 </div>
