@model IEnumerable<IPSSER.DATOS.TBL_PORTAL_TRABAJA_CON_NOSOTROS>

@{
    ViewBag.Title = "Index";
}

<br />
<center>
    <h2>Trabaja con Nosotros</h2>
</center>
<br />
<br />

<p>
    <!-- @Html.ActionLink("CREAR NUEVO FRONT", "Create", null, new { @class = "btn btn-primary btn-xs" }) -->
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>Opciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.ActionLink("Ver Detalle", "Details", new { id = item.IdTrabajaConNosotros }, new { @class = "btn btn-primary btn-xs" }) |
                    @Html.ActionLink("Descargar Hoja de Vida", "Download", new { id = item.IdTrabajaConNosotros }, new { @class = "btn btn-primary btn-xs" }) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.IdTrabajaConNosotros }, new { @class = "btn btn-primary btn-xs" })
                </td>
            </tr>
        }

    </table>
</div>
